# Bot Configuration
BOT_TOKEN=your_discord_bot_token_here
DEBUG=False

# Database Configuration (MariaDB/MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=discord_bot_mgm

# Bot Admin Users (Discord User IDs, comma-separated)
BOT_ADMIN_USERS=123456789012345678,234567890123456789

# Message Rate Limiting (optional)
MESSAGE_RATE_LIMIT_ENABLED=true
MESSAGE_RATE_LIMIT_SECONDS=1.5
MESSAGE_RATE_LIMIT_COUNT=5

# Translation Settings (optional)
TRANSLATION_FILE=config/translation.json
MAX_TRANSLATION_FILE_SIZE=10485760

# API Keys (optional - for specific features)
# OPENAI_API_KEY=your_openai_api_key_here

# Logging Configuration (optional)
LOG_LEVEL=INFO
LOG_ROTATION_DAYS=7

# Performance Monitoring (optional)
ENABLE_PROFILING=false
PROFILE_SLOW_OPERATIONS_MS=1000

# Cache Configuration (optional)
CACHE_MAINTENANCE_INTERVAL_SECONDS=300
CACHE_CLEANUP_PERCENTAGE=10

# Scheduler Configuration (optional)
SCHEDULER_TIMEZONE=Europe/Paris